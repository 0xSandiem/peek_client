# Django environment (development/production)
DJANGO_ENV=development

# Django secret key - generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Enable debug mode (set to False in production)
DEBUG=True

# Comma-separated list of allowed hosts (domains)
ALLOWED_HOSTS=localhost,127.0.0.1

# Flask API URL (update for Docker: http://host.docker.internal:5001)
FLASK_API_URL=http://localhost:5001

# Comma-separated CORS origins (remove in production if using single origin)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001
