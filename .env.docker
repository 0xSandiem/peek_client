# Django Configuration
# Generate new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=dev-secret-key-change-in-production

# Disable debug in production
DJANGO_DEBUG=False

# Comma-separated allowed hosts (add production domain)
ALLOWED_HOSTS=localhost,127.0.0.1,peek_client

# Flask API Configuration
# For host machine API (standalone mode)
FLASK_API_URL=http://host.docker.internal:5001

# For Docker network API (full stack mode)
# Uncomment and connect to peek_api network: docker network connect peek_network peek_client
# FLASK_API_URL=http://peek_web:5000

# Next.js Configuration
# Leave empty for Docker build (uses same origin as Django)
NEXT_PUBLIC_API_URL=
